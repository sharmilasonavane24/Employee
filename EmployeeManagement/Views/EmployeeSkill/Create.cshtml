@model EmployeeManagement.ViewModel.EmployeeSkillDto

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "EmployeeSkill", FormMethod.Post, new { @id = "EmployeeSkillformPost" }))
{
    @Html.AntiForgeryToken()

   

<div >
    <h4>NewEmpSkill</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table>
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new {@class = "control-label col-md-10"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PhoneNumber, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new {@class = "text-danger"})
                    </div>
                </div>
            </td>
            <td>
                @for (int i = 0; i < Model.Skilllist.Count; i++)
                {

                    SelectList skillSet = ViewBag.SkillId;

                    <div class="form-group">
                        @Html.LabelFor(model => Model.Skilllist[i].Id, "Name", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => Model.Skilllist[i].Id, skillSet, htmlAttributes: new { @class = "form-control" })
                            @*@Html.DropDownList("Name", skillSet, htmlAttributes: new { @class = "form-control" })*@
                            @Html.ValidationMessageFor(model => Model.Skilllist[i].Id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => Model.Skilllist[i].YearExprience, htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => Model.Skilllist[i].YearExprience, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => Model.Skilllist[i].YearExprience, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @*<input type="image" src="~/delete.png"   value="@i" name="submit" class="btn btn-default" >*@
                            <div class="col-md-offset-2 col-md-10"></div>
                            <button value="@i" name="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>

                        </div>
                    </div>

                }
            </td>
        </tr>
        <tr>
            <td>
               
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2">
                        <input type="submit" value="Create" name="submit" class="btn btn-default" />
                    </div>
               
                    <div class="col-md-offset-2 col-md-2">
                        <input type="submit" value="Cancel" name="submit" class="btn btn-default" />
                    </div>
                </div>
            </td>
            <td> <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="AddMoreSkill" name="submit" class="btn btn-default" />
                </div>
            </div></td>
        </tr>

    </table>




  



    
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}